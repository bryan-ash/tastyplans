%h1 Edit your account details
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |form|
  = devise_error_messages!
  %p
    = form.label :username, "Please choose a user name"
    %br
    = form.text_field :username
  %p
    = form.label :email, "Enter a new email address if you would like to change it"
    %br
    = form.text_field :email
  %p
    = form.label :password, "Enter a new password"
    %i (leave blank if you don't want to change it)
    %br
    = form.password_field :password
  %p
    = form.label :password_confirmation, "Confirm your new password"
    %br
    = form.password_field :password_confirmation
  %p
    = form.label :current_password, "Enter your current password to confirm changes"
    %br
    = form.password_field :current_password
  
  %p= form.submit "Save account changes"
