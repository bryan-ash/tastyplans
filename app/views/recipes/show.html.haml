- recipes_menu << MenuLink.new('Edit this recipe', edit_recipe_path(@recipe))
- recipes_menu << MenuButton.new('Add to Meal Plan', current_meal_plan_add_recipe_path(@recipe)) if current_meal_plan

%section#recipe
  %h1= @recipe.name
  %p= @recipe.description

  %section#ingredients
    %h2 Ingredients
    %ul
      - @recipe.ingredient_amounts.each do |ingredient_amount|
        %li= "#{ingredient_amount.amount} #{ingredient_amount.unit} #{ingredient_amount.ingredient.name}"
        
  %section#directions
    %h2 Directions
    :markdown
      #{@recipe.directions}
