!!!
%html
  %head
    %meta{ :charset => "utf-8" }
    %title OhMabel!
    = stylesheet_link_tag 'style', 'wmd', 'jquery.autocomplete'
    = csrf_meta_tag

  %body
    %header
      %nav
        - if user_signed_in?
          = link_to "Sign out", destroy_user_session_path
        - else
          = link_to "Sign in", new_user_session_path
          / 
            or
            = link_to "Sign up", new_user_registration_path
      %section
        - if user_signed_in?
          %section
            = "Signed in as #{current_user.username}."
        %nav
          = link_to 'Home', root_path
          | 
          = link_to 'Contact', 'http://ohmabel.uservoice.com/forums/81175', :class => 'contact_us'

      %hgroup
        %h1= link_to "OhMabel!", root_path
        %h6= link_to "ease the pain of conjuring daily meals", root_path

      .flash
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}", :class => "message"

    %menu
      %nav
        %h2 Meal Plans
        %ul
          %li= link_to 'My current plan', edit_current_meal_plan_path
          %li= link_to 'List my plans', meal_plans_path
          %li= link_to 'Start a new plan', new_meal_plan_path
        = render "shared/recipes_nav"
        - unless actions.empty?
          %h2 Actions
          %ul
            - actions.each_pair do |label, path|
              %li= link_to label, path

    %article
      = yield

    %footer
      %section
        %h2 Newest Recipes
        - @recently_added_recipes.each do |recipe|
          %img{ :src => '../images/arrow.gif', :alt => '' }
          = link_to recipe.name, recipe_path(recipe)
          %br
      %section
        %h2 Recently Edited Recipes
        - @recently_edited_recipes.each do |recipe|
          %img{ :src => '../images/arrow.gif', :alt => '' }
          = link_to recipe.name, recipe_path(recipe)
          %br
      %section
        Copyright &copy; 2010 Bryan Ash

  = google_jquery
  = add_uservoice_form
  = javascript_include_tag "active_form.js", "analytics.js", "jquery.autocomplete.js", "autocomplete-hook.js"
  = set_focus_to_first_field
